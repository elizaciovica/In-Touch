<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    android:orientation="vertical"
    tools:context=".ui.RegisterActivity">

    <ImageButton
        android:id="@+id/homeIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="285dp"
        android:background="@drawable/roundcorner"
        android:gravity="center_horizontal"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="115dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/inter"
        android:text="Set your details"
        android:textColor="#974763"
        android:textFontWeight="600"
        android:textSize="25sp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:hint="Username"
        android:textColorHint="#974763"
        app:boxBackgroundColor="#EEBDBA"
        app:hintTextColor="#974763"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="#570924">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginTop="30dp"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#974763" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:hint="First Name"
        android:textColorHint="#974763"
        app:boxBackgroundColor="#EEBDBA"
        app:hintTextColor="#974763"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="#570924">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="30dp"
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#974763" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:hint="Last Name"
        android:textColorHint="#974763"
        app:boxBackgroundColor="#EEBDBA"
        app:hintTextColor="#974763"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="#570924">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="30dp"
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#974763" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="100dp"
        android:text="UPLOAD PROFILE PICTURE"/>

    <Button
        android:id="@+id/upload"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="Upload"
        android:textColor="#570924"
        android:backgroundTint="#D5D5CB"
        android:textSize="18dp"
        android:textFontWeight="300"
        android:layout_marginHorizontal="100dp"
        android:fontFamily="@font/inter"
        android:textStyle="italic"
        style="?attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/setProfileButton"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="Set Profile"
        android:textColor="#570924"
        android:backgroundTint="#D5D5CB"
        android:textSize="18dp"
        android:textFontWeight="300"
        android:layout_marginHorizontal="100dp"
        android:fontFamily="@font/inter"
        android:textStyle="italic"
        style="?attr/borderlessButtonStyle"
        />

</LinearLayout>